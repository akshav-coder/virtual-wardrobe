{
  "expo": {
    "name": "Virtual Wardrobe",
    "slug": "virtual-wardrobe",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.virtualwardrobe.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#6366f1"
      },
      "package": "com.virtualwardrobe.app"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Virtual Wardrobe to access your camera to take photos of your clothing items."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Virtual Wardrobe to access your photo library to select images of your clothing items."
        }
      ]
    ]
  }
}
